{
  "name": "agua-loti",
  "version": "1.0.0",
  "description": "Sistema de gestión de facturación y pagos para el servicio de agua potable",
  "author": "Sistema Agua LOTI",
  "main": "electron-main.js",
  "type": "commonjs",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node backend/server.js",
    "electron": "electron .",
    "electron-dev": "electron .",
    "crear-admin": "node backend/createAdmin.js",
    "init-facturacion": "node backend/scripts/initFacturacion.js",
    "init-facturacion-test": "node backend/scripts/initFacturacion.js --test-data",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons",
    "build": "electron-builder build --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "build:all": "electron-builder build --win --mac --linux --publish never"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^13.0.0",
    "whatsapp-web.js": "^1.34.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.agualoti.sistema",
    "productName": "Sistema Agua LOTI",
    "copyright": "Copyright © 2025 Sistema Agua LOTI",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "backend/**/*",
      "frontend/**/*",
      "electron-main.js",
      "electron-preload.js",
      "package.json",
      ".env.example",
      "installer-scripts/**/*"
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "extraResources": [
      {
        "from": "installer-scripts",
        "to": "installer-scripts",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema Agua LOTI",
      "perMachine": false,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": true,
      "include": "build/installer.nsh",
      "allowElevation": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  }
}
